<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input class="form-control" type="text" name="composeTitle" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label for="composeText" class="">Publish</label>
        <textarea class="form-control" cols="30" rows="5" name="composeText" placeholder="Enter Text Here"></textarea>
    </div>
    <button class="btn btn-primary" name="submit">Publish</button>
</form>

<%- include('partials/footer'); -%>